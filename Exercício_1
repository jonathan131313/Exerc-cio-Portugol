    para(inteiro posicao = 0;posicao < 8 ;posicao++)  
    {
      escreva("Digite a matrÃ­cula do aluno: ",posicao,"\n")
      leia(nr_matricula)
      matricula[posicao] = nr_matricula
      escreva("\n Digite o nome do aluno: ",posicao,"\n")
      leia(nome)
